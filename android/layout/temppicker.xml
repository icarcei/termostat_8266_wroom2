<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.skumar.flexibleciruclarseekbar.CircularSeekBar
        android:id="@+id/tCircularSeekBar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:focusableInTouchMode="false"
        android:padding="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTemppicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/dosis_extrabold"
        android:text="15.5\u2103"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="@+id/tCircularSeekBar"
        app:layout_constraintStart_toStartOf="@+id/tCircularSeekBar"
        app:layout_constraintTop_toTopOf="@+id/tCircularSeekBar" />


</android.support.constraint.ConstraintLayout>